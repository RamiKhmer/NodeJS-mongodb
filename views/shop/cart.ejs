<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <h1>Cart</h1>

    <% if(products.length > 0){ %>
    <ol>
        <% for(pro of products){ %>
        <li>
            <%= pro.title %>
            <b>Quantity: <%= pro.quantity %></b>
        </li>
        <form action="/delete-cart" method="POST">
            <input type="hidden" name="id" value="<%= pro._id %>">
            <button class="btn" type="submit">Delete this Cart</button>
        </form>
        <hr>

        <%} %>
    </ol>
    <br><hr>
    <div class="centered">
        <form action="/create-order" method="POST">
            <button class="btn" type="submit">Order Now!</button>
        </form>
    </div>


    <% }else { %>
    <h2>No Cart Found</h2>
    <% } %>


    <%- include('../includes/end.ejs') %>